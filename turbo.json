{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },

    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },

    "start": {
      "cache": false,
      "persistent": true
    },

    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [".tsbuildinfo"]
    },

    "typecheck:tsgo": {
      "dependsOn": ["^typecheck:tsgo"],
      "outputs": [".tsbuildinfo"]
    },

    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [".eslintcache"]
    }
  }
}
