{
  "name": "hetu",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "typecheck": "turbo typecheck --continue",
    "typecheck:tsgo": "turbo typecheck:tsgo --continue",
    "lint": "turbo lint --continue",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,yaml,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,yaml,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@typescript/native-preview": "^7.0.0-dev.20250921.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "elysia": "1.4.6",
    "@sinclair/typebox": "0.34.41",
    "purify-ts": "2.1.2"
  }
}
