{
  "name": "hetu",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "typecheck": "turbo typecheck --continue",
    "typecheck:tsgo": "turbo typecheck:tsgo --continue",
    "lint": "turbo lint --continue",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,yaml,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,yaml,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@typescript/native-preview": "^7.0.0-dev.20251122.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "elysia": "1.4.16",
    "@sinclair/typebox": "0.34.41"
  }
}
