{
  "name": "@repo/backend",
  "version": "0.1.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun scripts/build.ts",
    "start": "cd dist && bun run index.js",
    "typecheck": "tsc --noEmit",
    "lint": "bun run --cwd ../.. eslint apps/backend --max-warnings 0 --cache --cache-location apps/backend/.eslintcache",
    "migration:generate": "drizzle-kit generate",
    "migration:drop": "drizzle-kit drop",
    "migration:run": "bun scripts/migrate.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@elysiajs/server-timing": "^1.2.0",
    "@elysiajs/swagger": "^1.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@repo/miniclap": "*",
    "@repo/pino-pretty-transport": "*",
    "@sinclair/typebox": "^0.34.15",
    "@tqman/nice-logger": "^1.1.1",
    "bun-plugin-pino": "^1.3.0",
    "drizzle-orm": "^0.38.3",
    "elysia": "^1.2.14",
    "nodemailer": "^6.9.16",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "sharp": "^0.33.5",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/nodemailer": "^6.4.17",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.1"
  },
  "module": "src/index.js",
  "exports": {
    ".": "./src/index.ts"
  }
}
