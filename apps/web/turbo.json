{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "dev": {
      "env": [
        "NODE_ENV",
        "PUBLIC_URL",
        "API_ROOT",
        "TEXTURE_STORE_ROOT",
        "JWT_SECRET",
        "MSA_CLIENT_ID"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "build": {
      "env": ["NODE_ENV"],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
