{
  "name": "hetu-dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "forwardPorts": [
    "app:3000",
    "app:3001",
    "db:5432",
    "s3:9000",
    "s3:9001",
    "mail:1025",
    "mail:8025"
  ],
  "portsAttributes": {
    "1025": {
      "label": "SMTP Server"
    },
    "3000": {
      "label": "Dev Frontend"
    },
    "3001": {
      "label": "Dev Backend"
    },
    "5432": {
      "label": "Database"
    },
    "8025": {
      "label": "Mail Dashboard"
    },
    "9000": {
      "label": "S3 API"
    },
    "9001": {
      "label": "S3 Dashboard"
    }
  },
  "customizations": {
    "jetbrains": {
      "backend": "WebStorm"
    },
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": false
    },
    "./feature-setup-pure": {}
  },
  "postCreateCommand": "bun install"
}
